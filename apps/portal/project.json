{
  "name": "portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/Portal/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/Portal",
        "index": "apps/Portal/src/index.html",
        "browser": "apps/Portal/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/Portal/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "baseHref": "/",
        "deployUrl": "/",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/Portal/src/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "apps/Portal/public",
            "output": "."
          }
        ],
        "styles": ["apps/Portal/src/styles.scss"],
        "scripts": [],
        "server": "apps/Portal/src/main.server.ts",
        "ssr": {
          "entry": "apps/Portal/src/server.ts"
        },
        "outputMode": "server"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "apps/Portal/src/environments/environment.ts",
              "with": "apps/Portal/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/Portal/src/environments/environment.ts",
              "with": "apps/Portal/src/environments/environment.dev.ts"
            }
          ]
        },
        "qa": {
          "optimization": true,
          "extractLicenses": true,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/Portal/src/environments/environment.ts",
              "with": "apps/Portal/src/environments/environment.qa.ts"
            }
          ]
        },
        "uat": {
          "optimization": true,
          "extractLicenses": true,
          "sourceMap": false,
          "fileReplacements": [
            {
              "replace": "apps/Portal/src/environments/environment.ts",
              "with": "apps/Portal/src/environments/environment.uat.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "portal:build:production"
        },
        "development": {
          "buildTarget": "portal:build:development"
        },
        "qa": {
          "buildTarget": "portal:build:qa"
        },
        "uat": {
          "buildTarget": "portal:build:uat"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "portal:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/Portal/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "portal:build",
        "port": 4200,
        "staticFilePath": "dist/apps/Portal/browser",
        "spa": true
      }
    }
  }
}
